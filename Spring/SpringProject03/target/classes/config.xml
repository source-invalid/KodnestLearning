<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean class="com.kodnest.spring.SpringProject03.Employee" id="emp1">
    
    <!-- Setting the values for list type  -->
    	<property name="technology">
    		<list>
    			<value>Java</value>
    			<value>Python</value>
    			<value>SQL</value>
    			
    		</list>
    	</property>
    	
    <!-- Setting the values for set type  -->
    	<property name="project">
    		<set>
    			<value>Project 1</value>
    			<value>Project 2</value>
    			<value>Project 3</value>
    			
    		</set>
    	
    	</property>
    	
    <!-- Setting the values for map type  -->
    	<property name="company">
    		<map>
    			<entry key="011" value="TCS"></entry>
    			<entry key="012" value="Infosys"></entry>
    		
    		</map>
    	
    	</property>
    
    </bean>

    
</beans>