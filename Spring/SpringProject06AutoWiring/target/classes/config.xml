    -->
    
     <!-- Auto Wiring using constructors to set value -->
    <bean class="com.kodnest.spring.SpringProject06AutoWiring.Car" 
    id="car" autowire="constructor">
    </bean>
    
    <bean class="com.kodnest.spring.SpringProject06AutoWiring.Engine" 
    id="eng">
    	<property name="eng_No" value="11"></property>
    	<property name="eng_Type" value="Petrol"></property>
    </bean>
    
</beans>